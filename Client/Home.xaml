<Page x:Class="Client.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="450"
      Title="Main">

    <Grid Background="White">
        <TextBlock HorizontalAlignment="Left" Margin="30,30,0,0" TextWrapping="Wrap"
                   VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Text="Custom VVsion"></TextBlock>
        <Button x:Name="btn_create_model" FontSize="20" Content="모델 생성하기" HorizontalAlignment="Center" Margin="0,180,0,0" VerticalAlignment="Top" Height="60" Width="300" Click="btn_create_model_Click"/>
        <Button x:Name="btn_test_model" FontSize="20" Content="모델 테스트" HorizontalAlignment="Center" Margin="0,280,0,0" VerticalAlignment="Top" Height="60" Width="300" Click="btn_test_model_Click"/>
        <Button x:Name="btn_download_model" FontSize="20" Content="모델 다운로드" HorizontalAlignment="Center" Margin="0,380,0,0" VerticalAlignment="Top" Height="60" Width="300" Click="btn_download_model_Click"/>
    </Grid>
</Page>
