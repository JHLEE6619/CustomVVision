<Page x:Class="Client.Test_model"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="450"
      Title="Test_model">

    <Grid Background="White">
        <TextBlock HorizontalAlignment="Left" Margin="30,30,0,0" TextWrapping="Wrap"
            VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Text="모델 테스트"/>
        <Grid Margin="0,100,0,100" HorizontalAlignment="Center" Width="380" Background="Gainsboro">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Button x:Name="btn_sel_image" Content="이미지 선택" Margin="20,0,0,0" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left" Height="30" Width="100" Click="btn_sel_image_Click"/>

            <TextBlock x:Name="TBlock_imageUri" Width="210" Height="24" HorizontalAlignment="Center" Grid.Column="1" TextWrapping="Wrap" VerticalAlignment="Center" Background="White"/>
            <TextBlock Grid.Row="3" FontSize="16" HorizontalAlignment="Left" Margin="20,0,0,0" TextWrapping="Wrap" Text="[결과]" VerticalAlignment="Center"/>
            <TextBlock x:Name="TBlock_result" Grid.Column="1" Grid.Row="3" FontSize="16" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="210" Background="White"/>
            <Button Grid.Column="1" Grid.Row="2" Content="테스트" Margin="0,0,20,0" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Right" Height="30" Width="100"/>
            <Image  x:Name="img_testImg" HorizontalAlignment="Left" Margin="20,20,0,0" Grid.Row="1" Width="340" Grid.ColumnSpan="2" Height="210" VerticalAlignment="Top"/>

        </Grid>

    </Grid>
</Page>
