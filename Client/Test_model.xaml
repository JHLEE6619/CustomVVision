<Page x:Class="Client.Test_model"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="450"
      Title="Test_model">

    <Grid Background="White">
        <TextBlock HorizontalAlignment="Left" Margin="30,30,0,0" TextWrapping="Wrap"
            VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Text="모델 테스트"/>
        <Grid Margin="0,100,0,100" HorizontalAlignment="Center" Width="380" Background="Gainsboro">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Button Content="이미지 선택" Margin="10,0,0,0" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left" Height="30" Width="100"/>
            <Label Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center"
                   Width="340" Height="220" Background="White"/>
            <TextBlock x:Name="TBlock_imageUri" FontSize ="16" Width="220" Height="24" HorizontalAlignment="Left" Margin="20,0,0,0" Grid.Column="1" TextWrapping="Wrap" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="2" FontSize="16" HorizontalAlignment="Left" Margin="20,0,0,0" TextWrapping="Wrap" Text="[결과]" VerticalAlignment="Center"/>
            <TextBlock x:Name="TBlock_result" Grid.Row="3" FontSize="16" HorizontalAlignment="Left" Margin="20,0,0,0" TextWrapping="Wrap" Text="결과" VerticalAlignment="Center"/>

        </Grid>

    </Grid>
</Page>
